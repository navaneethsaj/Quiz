<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewcolor"
    android:layout_margin="8dp"
    android:elevation="4dp"
    tools:context="com.agni.asus.quiz.MainActivity">

    <com.hanks.htextview.HTextView
        android:id="@+id/htextview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="serif"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:typeface="serif" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score_counter"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="SCORE"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="30sp"
        android:typeface="normal" />

    <com.daasuu.cat.CountAnimationTextView
        android:id="@+id/score_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="serif"
        android:text="0"
        android:textSize="56sp"
        android:typeface="normal" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/question_answer"
            android:layout_weight="1"
            android:text="Q&amp;A"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:fb_defaultColor="@color/button_normal"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            android:elevation="4dp"
            fancy:fb_focusColor="@color/button_pressed"
            fancy:fb_radius="30dp"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/quiz_start"
            android:layout_weight="1"
            android:text="START QUIZ"
            android:elevation="4dp"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:fb_defaultColor="@color/button_normal"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_focusColor="@color/button_pressed"
            fancy:fb_radius="30dp"/>
    </LinearLayout>

</RelativeLayout>

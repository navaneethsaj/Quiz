<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="com.agni.asus.quiz.QuizActivity">

    <com.hanks.htextview.HTextView
        android:id="@+id/display_current_score_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/questn_layout"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Final Points"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:typeface="normal"
        htext:animateType="typer" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout"
        android:id="@+id/scroll_view">
        <LinearLayout
            android:elevation="4dp"
            android:paddingBottom="8dp"
            android:layout_margin="10dp"
            android:background="@color/viewcolor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/questn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/q_mark_imgvw"
                    android:layout_width="49dp"
                    android:layout_height="61dp"
                    android:layout_above="@+id/question_view"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_the_question_mark_350169"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/question_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="15dp"
                    android:gravity="center_vertical"
                    android:hint="QUESTION"
                    android:text="Question"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questn_layout"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:paddingLeft="14dp"
                        android:id="@+id/img1"
                        android:layout_marginVertical="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_survey_2316468" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:id="@+id/option1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="optn1"
                        android:padding="6dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp"
                        android:typeface="normal" />
                    <ImageView
                        android:id="@+id/tick1"
                        android:paddingLeft="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_ticks_39830"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:paddingLeft="14dp"
                        android:id="@+id/img2"
                        android:layout_marginVertical="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_survey_2316468"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:id="@+id/option2"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="optn2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp"
                        android:typeface="normal" />
                    <ImageView
                        android:id="@+id/tick2"
                        android:paddingLeft="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_ticks_39830"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img3"
                        android:paddingLeft="14dp"
                        android:layout_marginVertical="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_survey_2316468"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:id="@+id/option3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:padding="6dp"
                        android:text="optn3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp"
                        android:typeface="normal" />
                    <ImageView
                        android:id="@+id/tick3"
                        android:paddingLeft="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_ticks_39830"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginVertical="2dp"
                        android:id="@+id/img4"
                        android:paddingLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_survey_2316468"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:id="@+id/option4"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="optn4"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20sp"
                        android:typeface="normal" />
                    <ImageView
                        android:id="@+id/tick4"
                        android:layout_width="wrap_content"
                        android:paddingLeft="8sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_ticks_39830"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_weight="1">
            <TextView
                android:id="@+id/nxt_qst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Next question in" />
            <com.daasuu.cat.CountAnimationTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:id="@+id/next_qstn_in"
                android:layout_weight="1"/>
        </LinearLayout>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/next"
            android:layout_weight="1"
            android:text="Next"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:fb_defaultColor="@color/button_normal"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_focusColor="@color/button_pressed"
            fancy:fb_radius="30dp"/>
    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/book_loading"
        android:layout_centerHorizontal="true"
        app:indicatorColor="@color/avloading"
        app:indicatorName="BallPulseSyncIndicator" />
    <com.victor.loading.book.BookLoading
        android:id="@+id/book_loading"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true" />

</RelativeLayout>
